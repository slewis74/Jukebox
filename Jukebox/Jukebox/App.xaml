<Application
    x:Class="Jukebox.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>

                <!-- 
                    IMPORTANT: the following Sources must have the Slew.WinRT/ removed when the app is referencing the library
                                using the Nuget package.
                 -->
                <ResourceDictionary Source="ms-appx:///Slew.WinRT/SlewWinRTResources/StandardLayout.xaml"/>
                <ResourceDictionary Source="ms-appx:///Slew.WinRT/SlewWinRTResources/StandardStyles.xaml"/>
                <ResourceDictionary Source="ms-appx:///Slew.WinRT/SlewWinRTResources/Converters.xaml"/>
                <ResourceDictionary Source="ms-appx:///Slew.WinRT/SlewWinRTResources/Controls.xaml"/>

                <ResourceDictionary Source="/Resources/ButtonStyles.xaml"/>
                
                <ResourceDictionary Source="/Resources/Theme.xaml"/>
            </ResourceDictionary.MergedDictionaries>

			<x:String x:Key="AppName">Jukebox</x:String>

		</ResourceDictionary>
    </Application.Resources>
</Application>
