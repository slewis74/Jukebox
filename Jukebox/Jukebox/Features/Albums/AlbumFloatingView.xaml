<UserControl
    x:Class="Jukebox.Features.Albums.AlbumFloatingView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400"
    HorizontalAlignment="Left"
    VerticalAlignment="Top">

    <StackPanel>
        <Border
            BorderThickness="1"
            BorderBrush="Gray">
            <StackPanel Margin="0,4,14,0">
                <TextBlock Text="{Binding Album.Title}" Margin="0,0,0,20" />
                <Image Source="{Binding Album.SmallBitmap}" Margin="0,0,0,20" Stretch="None"/>
                <TextBlock Text="The album says 'Let me go!'"/>
            </StackPanel>
        </Border>
    </StackPanel>
</UserControl>
