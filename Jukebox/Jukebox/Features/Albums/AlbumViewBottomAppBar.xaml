<UserControl
    x:Class="Jukebox.Features.Albums.AlbumViewBottomAppBar"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">
    
    <StackPanel Orientation="Horizontal">
		<Button 
			Style="{StaticResource PlayAppBarButtonStyle}"
			Command="{Binding PlaySong}"
			CommandParameter="{Binding SelectedTrack}"/>
        <Button 
			Style="{StaticResource AddAppBarButtonStyle}"
			Command="{Binding AddSong}"
			CommandParameter="{Binding SelectedTrack}"/>
        <Button 
			Style="{StaticResource AddAppBarButtonStyle}"
			Command="{Binding AddAlbum}"
            CommandParameter="{Binding .}">
        </Button>
    </StackPanel>
</UserControl>
